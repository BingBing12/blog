
<%- include("partials/header") -%>

<h1>Home</h1>
<p><%=startContent%></p>
<%posts.forEach(function(post){%>
    <h3>
        <%=post.title%>
    </h3>
    <%let result = post.content.slice(0, 100);%>
    <%if(post.content.length >100){%>
        <p>
            <%=result%> ...
            
            
            <a href="/posts/<%=post.title%>">Read More</a>
        </p>  
    <%}else{%>
        <p>
            <%=result%>
        </p>  
    <%}%>

   
    
<% }) %>

<%- include("partials/footer") -%>